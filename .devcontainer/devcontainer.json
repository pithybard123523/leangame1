{
  "name": "Lean4Game",
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "leanprover.lean4"
      ],
      "settings": {
        "remote.autoForwardPorts": false
      }
    },
    "codespaces": {
      "openFiles": ["Game.lean"]
    }
  },

  "postCreateCommand": "bash .devcontainer/lean-install.sh"
}
